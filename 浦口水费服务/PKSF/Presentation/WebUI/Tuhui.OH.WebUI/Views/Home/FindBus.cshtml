<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    
    <script src="@Url.Content("~/Script/jquery-1.8.2.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Script/OH.05_trafficTransfer.js")" type="text/javascript"></script>*@
    <script type="text/javascript">
            
    </script>
    <style type="text/css">
        body{margin: 0px;padding: 0px;background: #ffffff;}
        #box_title{ height: 50px; line-height: 50px; font-size: 22px; background: url('@Url.Content("~/content/title/tit_back.png")') repeat-x;color: #fff;font-family: '微软雅黑', '黑体';}
        #box_title .titleIcon{width: 126px;height: 31px;background: url('@Url.Content("~/content/title/tit_08.png")') no-repeat center;position: absolute;left: 0px;top: 0px;margin-left: 50px;margin-top: 12px;}
      
        #box_title .closeBtn{width: 21px;height: 21px;background: url('@Url.Content("~/content/title/close.png")') no-repeat center;position: absolute;right: 0px;top: 0px; cursor: pointer;margin-top: 12px;margin-right: 15px;}
        
        
        #box_list ul li{ width: 220px;height: 105px;line-height: 105px;color: #fff;font-size: 28px;font-family: '微软雅黑', '黑体'; font-weight: bold;float: left;background: #58a133;text-align: center;margin: 10px 20px 20px 10px;cursor: pointer;}
     
         #box_list ul li:hover {
             background: #d06003;
         }

        @*按钮样式*@
        #busButton {
            position: absolute;
            bottom: 30px;
            background-color: #6a6976;
            height: 40px;
            line-height: 40px;
            margin-left: 40px;
            margin-right: 30px;
            text-align: center;
            font-size: 16px;
            font-family: '微软雅黑', '黑体';
            width: 90%;
            cursor: pointer;
        }
    </style>

    <script type="text/javascript">
        $(function () {

            $("#box_list ul li").on("click", function (e) {
                //TODO:这里写调用方法
                window.parent.$("#FindBus").hide();
                window.parent.$.OH.trafficTransfer.clickBusNumber(e.target.getAttribute("data"),6);
                window.parent.globalToiletId = 3;//e.target.getAttribute("data");//全局变量
                window.parent.globalType = 6;

            });

            //关闭按钮
            $(".closeBtn").on("click", function () {
                window.parent.$("#FindBus").hide();
            });

            $("#busButton").on("click", function() {
                window.parent.$("#FindBus").hide();
                window.parent.$("#TrafficTransfer").show();
            });
        });

    </script>
</head>
<body>
    <div id="box_title">
        <div class="titleIcon"></div>
        <div style="background: #cbdcc3; width: 60px; height: 50px; float: right">
            <div class="closeBtn"></div>
        </div>

    </div>
    <div id="box_list">
        <ul>
            <li id="bus1" data="1">84路</li>
            <li id="bus2" data="2">119路</li>
            <li id="bus3" data="3">129路</li>
            <li id="bus4" data="4">816路</li>
            <li id="bus5" data="5">192路</li>
            <li id="bus6" data="6">191路</li>
            <li id="bus7" data="7">190路</li>
            <li id="bus8" data="8">181区间</li>
            <li id="bus9" data="9">19区间</li>
        </ul>
        
        
    </div>
    <div id="busButton">返     回</div>
</body>
</html>

